<% if @travel_persona.errors.any? %>
  <% @travel_persona.errors.full_messages.each do |message| %>
    <div class="alert">
      <%= message %>
    </div>
  <% end %>
<% end %>

<h1>
  Edit travel persona #<%= @travel_persona.id %>
</h1>

<hr>

<form action="/update_travel_persona/<%= @travel_persona.id %>" method="post">


  <div class="form-group">
    <label for="party_level_id">
      Party level
    </label>

    <%= select_tag(:party_level_id, options_from_collection_for_select(EnergyLevel.all, :id, :party_level, @travel_persona.party_level_id), :class => "form-control") %>
  </div>

  <div class="form-group">
    <label for="age_cohort_id">
      Age cohort
    </label>

    <%= select_tag(:age_cohort_id, options_from_collection_for_select(AgeGroup.all, :id, :age_cohort, @travel_persona.age_cohort_id), :class => "form-control") %>
  </div>

  <div class="form-group">
    <label for="activities_id">
      Activities
    </label>

    <%= select_tag(:activities_id, options_from_collection_for_select(Activity.all, :id, :name, @travel_persona.activities_id), :class => "form-control") %>
  </div>

  <div class="form-group">
    <label for="city_id">
      City
    </label>

    <%= select_tag(:city_id, options_from_collection_for_select(City.all, :id, :city_name, @travel_persona.city_id), :class => "form-control") %>
  </div>

  <button class="btn btn-block btn-outline-secondary">
    Update travel persona
  </button>
</form>

<hr>

<a href="/travel_personas">
  Go back
</a>
