<div class="row mb-3">
  <div class="col-md-8 offset-md-2">
    <h1>
      Travel persona #<%= @travel_persona.id %> details
    </h1>

    <div class="row mb-3">
      <div class="col">
        <a href="/travel_personas" class="btn btn-block btn-outline-secondary">
          Go back
        </a>
      </div>

      <div class="col">
        <% if current_user == @travel_persona.user %>
          <a href="/travel_personas/<%= @travel_persona.id %>/edit" class="btn btn-block btn-sm btn-outline-secondary">
            Edit travel_persona
          </a>
        <% end %>
      </div>

      <div class="col">
        <% if current_user == @travel_persona.user %>
          <a href="/delete_travel_persona/<%= @travel_persona.id %>" class="btn btn-block btn-sm btn-outline-secondary">
            Delete travel_persona
          </a>
        <% end %>
      </div>
    </div>

    <dl>
      <dt>
        User
      </dt>
      <dd>
        <% if @travel_persona.user.present? %>
          <a href="/users/<%= @travel_persona.user_id %>">
            <%= @travel_persona.user.email %>
          </a>
        <% end %>
      </dd>

      <dt>
        Party level
      </dt>
      <dd>
        <% if @travel_persona.party_level.present? %>
          <a href="/energy_levels/<%= @travel_persona.party_level_id %>">
            <%= @travel_persona.party_level.party_level %>
          </a>
        <% end %>
      </dd>

      <dt>
        Age cohort
      </dt>
      <dd>
        <% if @travel_persona.age_cohort.present? %>
          <a href="/age_groups/<%= @travel_persona.age_cohort_id %>">
            <%= @travel_persona.age_cohort.age_cohort %>
          </a>
        <% end %>
      </dd>

      <dt>
        Activities
      </dt>
      <dd>
        <% if @travel_persona.activities.present? %>
          <a href="/activities/<%= @travel_persona.activities_id %>">
            <%= @travel_persona.activities.name %>
          </a>
        <% end %>
      </dd>

      <dt>
        City
      </dt>
      <dd>
        <% if @travel_persona.city.present? %>
          <a href="/cities/<%= @travel_persona.city_id %>">
            <%= @travel_persona.city.city_name %>
          </a>
        <% end %>
      </dd>

      <dt>
        Created at
      </dt>
      <dd>
        <%= time_ago_in_words(@travel_persona.created_at) %> ago
      </dd>

      <dt>
        Updated at
      </dt>
      <dd>
        <%= time_ago_in_words(@travel_persona.updated_at) %> ago
      </dd>
    </dl>
  </div>
</div>

