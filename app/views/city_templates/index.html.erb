<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      All cities
    </h1>

    <a href="/cities/new" class="btn btn-block btn-outline-secondary">
      Add a new city
    </a>
  </div>
</div>

<!-- Ransack Code start -->

<!-- Ransack Code end -->

<!-- Location Map Code start -->

<!-- Location Map Code end -->

<hr>

<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          ID
        </th>

        <th>
          City name
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @cities.each do |city| %>
      <tr>
        <!-- Display city.id start -->
        <td>
          <%= city.id %>
        </td>
        <!-- Display city.id end -->

        <!-- Display city.city_name start -->
        <td>
          <%= city.city_name %>
        </td>
        <!-- Display city.city_name end -->

        <!-- Display city.created_at start -->
        <td>
          <%= time_ago_in_words(city.created_at) %> ago
        </td>
        <!-- Display city.created_at end -->

        <!-- Display city.updated_at start -->
        <td>
          <%= time_ago_in_words(city.updated_at) %> ago
        </td>
        <!-- Display city.updated_at end -->

        <td>
          <a href="/cities/<%= city.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>

    <div class="row mb-3">
      <div class="col-md-12">
        <%= paginate @cities, theme: "twitter-bootstrap-4" %>
      </div>
    </div>

  </div>
</div>
