<form action="/create_travel_persona_from_city" method="post">

  <input type="hidden" name="user_id" value="<%= current_user.id %>">

  <div class="form-group">
    <label for="party_level_id">
      Party level
    </label>

    <%= select_tag(:party_level_id, options_from_collection_for_select(EnergyLevel.all, :id, :party_level, @travel_persona.party_level_id), :class => "form-control") %>
  </div>

  <div class="form-group">
    <label for="age_cohort_id">
      Age cohort
    </label>

    <%= select_tag(:age_cohort_id, options_from_collection_for_select(AgeGroup.all, :id, :age_cohort, @travel_persona.age_cohort_id), :class => "form-control") %>
  </div>

  <div class="form-group">
    <label for="activities_id">
      Activities
    </label>

    <%= select_tag(:activities_id, options_from_collection_for_select(Activity.all, :id, :name, @travel_persona.activities_id), :class => "form-control") %>
  </div>

  <input type="hidden" name="city_id" value="<%= @city.id %>">

  <button class="btn btn-block btn-outline-secondary">
    Create travel persona
  </button>
</form>
