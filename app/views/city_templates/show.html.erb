<div class="row mb-3">
  <div class="col-md-8 offset-md-2">
    <h1>
      City #<%= @city.id %> details
    </h1>

    <div class="row mb-3">
      <div class="col">
        <a href="/cities" class="btn btn-block btn-outline-secondary">
          Go back
        </a>
      </div>

      <div class="col">
        <a href="/cities/<%= @city.id %>/edit" class="btn btn-block btn-outline-secondary">
          Edit city
        </a>
      </div>

      <div class="col">
        <a href="/delete_city/<%= @city.id %>" class="btn btn-block btn-outline-secondary">
          Delete city
        </a>
      </div>
    </div>

    <dl>
      <dt>
        City name
      </dt>
      <dd>
        <%= @city.city_name %>
      </dd>

      <dt>
        Created at
      </dt>
      <dd>
        <%= time_ago_in_words(@city.created_at) %> ago
      </dd>

      <dt>
        Updated at
      </dt>
      <dd>
        <%= time_ago_in_words(@city.updated_at) %> ago
      </dd>
    </dl>
  </div>
</div>

<div class="row mb-3">
  <div class="col-md-8 offset-md-2">
    <%= render partial: "city_templates/city_travel_preferences" %>
  </div>
</div>
