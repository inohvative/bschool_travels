<h1>
  Edit city #<%= @city.id %>
</h1>

<hr>

<form action="/update_city/<%= @city.id %>" method="post">

  <div class="form-group">
    <label for="city_name">
      City name
    </label>

    <input type="text" id="city_name" name="city_name" class="form-control" value="<%= @city.city_name %>">
  </div>

  <button class="btn btn-block btn-outline-secondary">
    Update city
  </button>
</form>

<hr>

<a href="/cities">
  Go back
</a>
