<h1>
  Edit energy level #<%= @energy_level.id %>
</h1>

<hr>

<!-- Form energy_level start -->
<form action="/update_energy_level/<%= @energy_level.id %>" method="post">
<!-- Form energy_level end -->

  <!-- Label and input for party_level start -->
  <div class="form-group">
    <label for="party_level">
      Party level
    </label>

    <!-- Input for party_level start -->
    <input type="text" id="party_level" name="party_level" class="form-control" value="<%= @energy_level.party_level %>">
    <!-- Input for party_level end -->
  </div>
  <!-- Label and input for party_level end -->

  <button class="btn btn-block btn-outline-secondary">
    Update energy level
  </button>
</form>

<hr>

<a href="/energy_levels">
  Go back
</a>
