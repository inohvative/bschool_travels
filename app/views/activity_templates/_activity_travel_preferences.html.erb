<div class="card">
  <div class="card-header d-flex align-items-center justify-content-between">
    Travel Preferences

    <a data-toggle="collapse" href="#activity_travel_preferences_new_form">
      Add travel persona
    </a>
  </div>

  <ul class="list-group list-group-flush">
    <% @activity.travel_preferences.each do |travel_persona| %>
      <li class="list-group-item d-flex align-items-center justify-content-between">
        <a href="/travel_personas/<%= travel_persona.id %>">
          <%= travel_persona.user_id %>
        </a>

        <%if current_user == travel_persona.user %>
          <a href="/delete_travel_persona_from_activity/<%= travel_persona.id %>">
            Delete
          </a>
        <% end %>

      </li>
    <% end %>

    <div class="card-footer">
      <div class="collapse" id="activity_travel_preferences_new_form">
        <%= render partial: "activity_templates/activity_travel_preferences_new_form" %>
      </div>
    </div>

  </ul>
</div>
