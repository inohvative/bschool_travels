<div class="row mb-3">
  <div class="col-md-8 offset-md-2">
    <h1>
      Activity #<%= @activity.id %> details
    </h1>

    <div class="row mb-3">
      <div class="col">
        <a href="/activities" class="btn btn-block btn-outline-secondary">
          Go back
        </a>
      </div>

      <!-- Edit link activity start -->
      <div class="col">
        <a href="/activities/<%= @activity.id %>/edit" class="btn btn-block btn-outline-secondary">
          Edit activity
        </a>
      </div>
      <!-- Edit link activity end -->

      <!-- Delete link activity start -->
      <div class="col">
        <a href="/delete_activity/<%= @activity.id %>" class="btn btn-block btn-outline-secondary">
          Delete activity
        </a>
      </div>
      <!-- Delete link activity end -->
    </div>

    <dl>
      <dt>
        Name
      </dt>
      <!-- Display name start -->
      <dd>
        <%= @activity.name %>
      </dd>
      <!-- Display name end -->

      <dt>
        User
      </dt>
      <!-- Display user_id start -->
      <dd>
        <%= @activity.user_id %>
      </dd>
      <!-- Display user_id end -->

      <dt>
        Start date
      </dt>
      <!-- Display start_date start -->
      <dd>
        <%= @activity.start_date %>
      </dd>
      <!-- Display start_date end -->

      <dt>
        Created at
      </dt>
      <!-- Display created_at start -->
      <dd>
        <%= time_ago_in_words(@activity.created_at) %> ago
      </dd>
      <!-- Display created_at end -->

      <dt>
        Updated at
      </dt>
      <!-- Display updated_at start -->
      <dd>
        <%= time_ago_in_words(@activity.updated_at) %> ago
      </dd>
      <!-- Display updated_at end -->
    </dl>
  </div>
</div>

